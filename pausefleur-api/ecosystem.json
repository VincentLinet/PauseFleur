{
  "apps": [
    {
      "name": "pausefleur-api",
      "script": "./dist/main.js",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env_development": {
        "NODE_ENV": "development"
      },
      "env_integration": {
        "NODE_ENV": "integration"
      },
      "env_uat": {
        "NODE_ENV": "uat"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
      "host": "vps",
      "ref": "origin/master",
      "repo": "git@github.com:VincentLinet/PauseFleur.git",
      "path": "/home/vincent/sites/pausefleur/pausefleur-api",
      "post-deploy": "yarn && cd pausefleur-api && yarn build && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
